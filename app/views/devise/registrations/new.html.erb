<div class="well">
  <div class="page-header">
    <h1>Sign up</h1>
  </div>


 <%= devise_error_messages! %>
 
<div class="row">

  <div class="col-md-6">
    <div class="well">
           <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
         
          <div class="form-group">
            <%= f.label :username %><br />
            <%= f.text_field :username, autofocus: true, class: "form-control", placeholder: "Enter a username" %>
          </div>


          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: false, class: "form-control", placeholder: "yourname@example.com" %>
          </div>

          <div class="form-group">
            <%= f.label :password %>
            <% if @validatable %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.submit "Create an Account!", class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
    </div>
  </div><!-- End 6 col -->

  <div class="col-md-6">
    <div class="panel panel-default">
      <!-- Default panel contents -->
      <div class="panel-heading"><h2>What do I get</h2></div>
      <div class="panel-body">
        <p>You should check out the following benefits for signing up!</p>
      <!-- List group -->
      <ul>
        <li><strong>Apply to join our servers</strong></li>
        <li>Access Map Downloads</li>
        <li>Become a part of a fantastic community</li>
      </ul>

      </div>

    </div>
  </div> <!-- End 4 col -->
</div>

 
</div>
