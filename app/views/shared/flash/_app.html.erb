<% flash.each do |key, value| %>
  <div class="container">
    <div class="alert <%= bootstrap_class_for(key) %> alert-flash alert-dismissible fade show mt-2" role="alert">
      <%= value %>

      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>
<% end %>
