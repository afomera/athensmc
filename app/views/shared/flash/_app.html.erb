<% flash.each do |key, value| %>
  <% if key == 'notice'; key = 'info'; end %>
  <% if key == 'alert'; key = 'danger'; end %>
  <div class="alert alert-<%= key %> alert-flash alert-dismissible fade show mt-1" role="alert">
    <%= value %>

    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span class="pointerless" aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>
