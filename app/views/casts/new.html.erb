<% page_title("New Cast") %>
<div class="well">

<div class="page-header">
	<h1>Add AthensCast <small><% if @last_cast.nil? %>
	<strong>No episode posted last</strong>
<% else %>Last posted episode: <%= @last_cast.episode %> <% end %></small></h1>
</div>
	<%= form_for :cast, url: casts_path do |f| %>
			<% if @cast.errors.any? %>
				<div id="error_explanation">
					<h2><%= @cast.errors.count %> Error(s) prohibited this from being saved:</h2>
					<ul>
						<% @cast.errors.full_messages.each do |msg| %>
							<li><%= msg %></li>
						<% end %>
					</ul>
				</div>
			<% end %>

			<div class="mb-3">
				<%= f.label :episode %>
				<%= f.text_field :episode, :placeholder => "Episode Number", class: "form-control" %>
			</div>


			<div class="mb-3">
				<%= f.label :releasedate %>
				<%= f.text_field :releasedate, :placeholder => "Release Date (Ex: 2/25/2015)", class: "form-control" %>
			</div>

			<div class="mb-3">
				<div class="pull-right"><p class="text-muted"><%= link_to "Text formatted via Markdown Formatting", "https://github.com/adam-p/markdown-here/wiki/Markdown-Cheatsheet", :target => "blank" %></p></div>
				<%= f.label :description %>
				<%= f.text_area :description, :placeholder => "Short description of AthensCast Episode", :rows => 2, class: "form-control" %>
			</div>
			<div class="mb-3">
				<%= f.label :embedcode %>
				<%= f.text_area :embedcode, :placeholder => "Insert embedcode from Wistia or YouTube", :rows => 3, class: "form-control" %>
			</div>
			<div class="mb-3">
				<div class="pull-right"><p class="text-muted"><%= link_to "Text formatted via Markdown Formatting", "https://github.com/adam-p/markdown-here/wiki/Markdown-Cheatsheet", :target => "blank" %></p></div>
				<%= f.label :shownotes %>
				<%= f.text_area :shownotes, :placeholder => "Show notes for the episode", :rows => 5, class: "form-control" %>
			</div>

		  	<div class="form-actions">
			<%= f.button "Add AthensCast", class: "btn btn-primary" %>
			<%= link_to "Cancel", casts_path, :class => "btn btn-default" %>
			</div>

			<h2>Example Embed Code <small>Be sure to change the YT ID link after /embed/</small> </h2>
			<code><%= iframecode = '<iframe class="embed-responsive-item" src="https://www.youtube.com/embed/9J8p-qz8O3M" frameborder="0" allowfullscreen></iframe>' %>
			</code>
			<hr />

		<% end %>
</div><!-- /.well -->
