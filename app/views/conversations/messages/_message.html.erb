<%= div_for message, class: ["card", "mb-3", conversation_message_classes(message)] do %>
  <div class="card-header">
   <div class="row">
     <div class="col">
       <%= link_to user_path(message.user.username) do %>
         <%= image_tag message.user.decorate.minecraft_avatar, class: "rounded avatar", width: 24, height: 24 %>
         <strong><%= message.user.username %></strong>
      <% end %>
      <small> sent on <%= link_to local_time(message.created_at, "%b %d, %Y"), conversation_url(@conversation, anchor: "message_#{message.id}"), class: "plain-link" %>:</small>
      <span class="float-md-right"><%= user_badges(message.user) %></span>
      </div>

      <div class="col-1 text-right">
          <%= link_to root_path do %>
            <%= fa_icon "pencil" %>

            <%= link_to conversation_message_path(message.conversation, message),
              method: :delete, data: { confirm: 'Are you sure you want to delete this? This cannot be undone.' } do %>
              <%= fa_icon "times" %>
            <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-body">
    <%= html_render message.content %>
  </div>
<% end %>
