<% page_title "Map Downloads" %>
  <div class="page-header">
    <h1>Map Downloads</h1>
  </div>

  <p class="center">There are <%= @map_downloads.count %> map downloads.</p>
  <hr>

  <div class="row">
    <div class="col-md-12">
      <h2 style="float: right">
        <%= link_to 'New Download', new_admin_download_path %>
      </h2>
      <h2 style="float: left">
        <%= link_to 'All', admin_downloads_path %>
      </h2>
    </div>
  </div>


  	<% if @map_downloads.empty? %>
      <h2>There are no map downloads currently! Check back soon!</h2>
    <% else %>

      <table class="table table-hover table-striped table-bordered">
       <thead>
        <tr>
          <th>Date Posted:</th>
          <th>Name:</th>
          <th>Description:</th>
          <th>Map Download:</th>
          <th>Admin Actions:</th>
        </tr>
      </thead>
      <tbody>
        <%= render(partial: 'admin/downloads/map_download', collection: @map_downloads) %>
      </tbody>
    </table>
    <% end %> <%# End if map_downloads exist block %>

    <%= will_paginate @map_downloads, renderer: BootstrapPagination::Rails %>
