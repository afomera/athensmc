<% page_title "Map Downloads" %>
<div class="well">
  <div class="page-header">
    <h1>Map Downloads</h1>
  </div>

  <p class="center">There are <%= @map_downloads.count %> map downloads.</p>
  <hr>

  <div class="row">
    <div class="col-md-12">
      <h2 style="float: right">
        <%= link_to "New Download", new_admin_download_path %>
      </h2>
      <h2 style="float: left">
        <%= link_to "All", admin_downloads_path %>
      </h2>
    </div>
  </div>


  	<% if @map_downloads.empty? %>
      <h2>There are no map downloads currently! Check back soon!</h2>
    <% else %>

      <table class="table table-hover table-striped table-bordered">
       <thead>
              <tr>
                <th>Date Posted:</th>
                <th>Name:</th>
                <th>Description:</th>
                <th>Map Download:</th>
                <th>Admin Actions:</th>
              </tr>
            </thead>
            <tbody>

      <% @map_downloads.each do |map| %>
  				<tr>
            <td><%= map.created_at.strftime("%m/%d/%Y") %>
            <td><%= map.name %></td>
            <td><%= map.description %></td>
            <td><%= link_to "Download", map.link %></td>
            <td>
            <%= link_to edit_admin_download_path(map) do %>
              <i class="fa fa-pencil fa-2x"></i>
            <% end %>
            &nbsp;
            <%= link_to admin_download_path(map), :method => :delete, data: { confirm: "Are you sure you want to delete this download?" } do %>
              <i class="fa fa-trash-o fa-2x"></i>
            <% end %>
            </td>
          </tr>
      <% end %>
            </tbody>
          </table>
    <% end %>

  	<% #Pagination Renderer %>
  		<div class="center">
  		<%= will_paginate @map_downloads, renderer: BootstrapPagination::Rails %>
  		</div>


</div>
