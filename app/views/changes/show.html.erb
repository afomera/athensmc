<% page_title @changes.title %>
<div class="well">
	<div class="page-header">
		<h1> <%= @changes.title %> <small>Posted <%= time_ago_in_words(@changes.created_at) %> ago</small></h1>
	</div>
	<%= markdownify @changes.text %>

	<hr>
 	<%= link_to raw("Edit Change"), edit_change_path(@changes), :class => "btn btn-info" %>


 	<%= link_to raw("Back to Changes"), changes_path, :class => "btn btn-primary" %>
<%= link_to 'Destroy', change_path(@changes),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>

</div>