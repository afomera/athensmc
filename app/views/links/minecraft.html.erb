<% page_title "Linking Minecraft Account" %>
<h1>Link Minecraft Account</h1>

<div class="row">
  <div class="col-md-12">
    <p>
      It is easy to link your Minecraft account to your AthensMC account!
      We don't require any passwords, and you'll just need to enter your
      <strong>current Minecraft username</strong>
      below and we will handle the rest.
    </p>

    <%= form_for @user, url: links_path,
      action: "update", method: :post do |f| %>
      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <%= f.label :minecraft_uuid, "Minecraft Username"%><br />
            <%= f.text_field :minecraft_uuid,
              autofocus: false,
              placeholder: "Current in-game Minecraft username",
              class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.submit "Link your account", class: "btn btn-primary btn-lg" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div><!-- ./row -->
