<% page_title "Editing Post" %>
<div class="well">
  <%= link_to forum_threads_path do %>
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18" />
    </svg>
    Back to the forum
  <% end %>
  <h1 class="page-header">Edit Thread</h1>

  <%= form_for @forum_thread do |f| %>
    <div class="mb-3">
      <%= f.label :forum_category_id, "Choose a Category" %>
      <%= f.collection_select :forum_category_id, ForumCategory.sorted, :id, :name, {include_blank: "Pick a category..."}, {autofocus: true, class: "form-control"} %>
    </div>

    <div class="mb-3">
      <%= f.text_field :subject, placeholder: "What do you have to say?", class: "form-control input-lg" %>
    </div>
    <div class="mb-3">
      <%= f.submit "Update post title", class: "btn btn-primary" %>
    </div>
  <% end %>

</div>
