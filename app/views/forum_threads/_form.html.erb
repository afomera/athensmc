<%= form_for @forum_thread do |f| %>
  <div class="mb-3">
    <%= f.label :forum_category_id, "Choose a Category" %>
    <%= f.collection_select :forum_category_id, ForumCategory.sorted, :id, :name, {include_blank: "Pick a category..."}, {autofocus: true, class: "form-control"} %>
  </div>

  <div class="mb-3">
    <%= f.text_field :subject, placeholder: "What do you have to say?", class: "form-control" %>
  </div>

  <%= f.fields_for :forum_posts do |p| %>
    <div class="mb-3">
      <%= p.trix_editor :body, placeholder: "Add your comment" %>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.submit "Create Forum Thread", class: "btn btn-primary pull-right" %>
    <%= link_to "Back to Forums", forum_threads_path, class: "btn btn-secondary" %>
  </div>
<% end %>
