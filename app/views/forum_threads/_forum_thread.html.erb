<div class="forum-thread-preview">
   <div class="forum-thread-avatar d-none d-sm-block">
     <%= image_tag forum_thread.user.minecraft_avatar %>
   </div>

   <div class="forum-thread-details">
     <h5>
       <%= link_to forum_thread do %>
       <% if forum_thread.sticky? %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
          </svg>
        <% end %>
        <%= forum_thread.subject %>
       <% end %>
     </h5>

     <div class="thread-details mb-2">
       <strong><%= link_to forum_thread.forum_category.name, forum_category_forum_threads_path(forum_thread.forum_category), class: "forum-thread-category", style: "color: #{forum_thread.forum_category.color}" %></strong>
       â€¢ Posted <%= local_time_ago forum_thread.created_at %> by <%= link_to forum_thread.user.username, user_path(forum_thread.user.username) %>
     </div>

     <div class="text-muted"><%= truncate(strip_tags(forum_thread.forum_posts.first.body), length: 200) %></div>
   </div>

   <div class="forum-thread-posts">
     <%= link_to forum_thread, class: "text-muted text-center" do %>
       <div class="count"><%= forum_thread.forum_posts_count %></div>
       <div class="posts"><%= "post".pluralize(forum_thread.forum_posts_count) %></div>
     <% end %>
   </div>
 </div>
